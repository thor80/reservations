
<div class="container">
    <div class="row justify-content-center">
        <div class="col">
        <h3>User rooms</h3>
        </div>
        <div class="col-2">
            <%= link_to "New Room", rooms_new_path, class: 'btn btn-primary' %>
        </div>
    </div>
    <div class="row mt-2 row-cols-1 gy-2 justify-content-center">
        <% @rooms.each do |room| %>
            <div class="col-13 card md-6">
                <div class="row">
                    <div class="col-md-4">
                        <% if room.image.attached? %>
                            <%= image_tag url_for(room.image), class: 'img-fluid rounded-start' %>
                        <% else %>
                            <img src="/default_room.jpg" class="img-fluid rounded-start" />
                        <% end %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title"><%= room.name %></h2>
                            <p class="card-text"><%= room.introduction %></p>
                            <p class="card-text"><small class="text-muted"><%= room.address %></small></p>
                            <p class="card-text"><small class="text-muted"><%= room.prefecture %></small></p>
                            <p class="card-text"><small class="text-muted"><%= room.postcode %></small></p>
                            <p class="card-text"><small class="text-muted"><%= room.city %></small></p>
                            <p class="card-text"><small class="text-muted"><%= room.fee %></small></p>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>