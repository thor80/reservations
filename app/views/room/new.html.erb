<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Change Password</h2>
      <%= form_with model: @room, :url => create_room_path do |f| %>
        <% if @room.errors.any? %>
          <div class="mb-3">
            <ul>
              <% @room.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label"  %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :introduction, class: "form-label"  %><br>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :address, class: "form-label"  %><br>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :fee, class: "form-label"  %><br>
          <%= f.number_field :fee, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :image, class: "form-label"  %><br>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        <%= f.submit 'Save', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>